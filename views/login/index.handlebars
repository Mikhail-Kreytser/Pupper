<link href="/css/login.css" rel="stylesheet">
<header class="intro-header" style="">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
        <div class="page-heading">
          <h1>Login</h1>
          <hr class="small">
        </div>
      </div>
    </div>
  </div>
</header>

<div class="container">
  <div class="row">
    <div class="login-form col-lg-8 col-lg-offset-4 col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3 col-xs-6 col-xs-offset-3">
      {{#each error}}
        <div class="alert alert-danger">{{this}}</div>
      {{/each}}
      <form name="login" action="/login" method="post">
        <div class="row control-group">
          <div class="form-group col-lg-6 floating-label-form-group controls">
            <label>Email Address</label>
            <input type="email" class="input-field form-control" placeholder="Email Address" name="email" required data-validation-required-message="Please enter your email address." spellcheck="false" autocomplete="false">
            <p class="help-block text-danger"></p>
          </div>
        </div>
        <div class="row control-group">
          <div class="form-group col-lg-6 floating-label-form-group controls">
            <label>Password</label>
            <input type="password" class="input-field form-control" placeholder="Password" name="password" required data-validation-required-message="Please enter your password." spellcheck="false" autocomplete="false">
            <p class="help-block text-danger"></p>
          </div>
        </div>
        <br>
        <div class="row">
          <div class="form-group col-xs-6">
              <button type="submit" class="login-btn btn btn-default">Login</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
