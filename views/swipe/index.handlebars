{{#each success}}
  <div class="alert alert-danger">{{this}}</div>
{{/each}}

<header class="intro-header" style="background-image: url('/img/about-bg.jpg')">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
        <div class="page-heading">
          <h1>Swipe</h1>
          <hr class="small">
          <span class="subheading">{{user.firstName}} {{user.lastName}}</span>
        </div>
      </div>
    </div>
  </div>
</header>

<div class="container">
  <div class="row">
    <div class="col-lg-1 col-lg-offset-2 col-md-10 col-md-offset-1">
      <img src="/profile_pics/{{profile.profileImage}}" class="img-rounded" alt="" style="width:200px">
    </div>
    <hr class="divider">
    <br>
    <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
      {{#each local_pets}}
          <div class="user-preview">
                  
                  <h2 class="user name">
                      {{this.name}} {{this.breed}}
                      <img src="/profile_pics/{{this.profileImage}}" class="img-rounded" alt="" style="width:200px">
                  </h2>
                  <div class="col-lg-1 col-lg-offset-2 col-md-10 col-md-offset-1">
                    
                  </div>
              </a>
          </div>

          <form name="login" action="/swipe" method="post">
          <div class="row control-group">
            <div class="form-group col-sm-offset-2 col-sm-8 floating-label-form-group controls">
              <label>status</label>
              <input type="text" class="input-field form-control" placeholder="Email Address" name="status" required data-validation-required-message="Please enter your email address." spellcheck="false" autocomplete="false">
              <p class="help-block text-danger"></p>
            </div>
          </div>
          <input type="hidden" name="pet" value="{{this.id}}">
          <br>
          <div class="row">
            <div class="form-group col-sm-offset-2 col-sm-8 text-center">
                <button type="submit" class="login-btn btn btn-default">Login</button>
            </div>
          </div>
        </form>

          <hr>
        {{/each}}
    </div>
  </div>
</div>