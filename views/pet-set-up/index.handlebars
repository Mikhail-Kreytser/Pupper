<link href="/css/set-up.css" rel="stylesheet">
<link class="jsbin" href="http://ajax.googleapis.com/ajax/libs/jqueryui/1/themes/base/jquery-ui.css" rel="stylesheet" type="text/css" />
<script class="jsbin" src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
<script class="jsbin" src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.0/jquery-ui.min.js"></script>
<script src="/js/previewImage.js"></script>
<meta charset=utf-8 />

<header class="intro-header" style="background-image: url('/img/dogbackground.jpg')">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
        <div class="page-heading">
          <h1>Pet Set Up</h1>
          <hr class="small">
          <span class="subheading">Do it for the puppers!</span>
        </div>
      </div>
    </div>
  </div>
</header>

<div class="container">
  {{#if error}}
  <div class="form-group col-xs-12 floating-label-form-group controls">
    <div class="alert alert-danger"><center>ERROR</center></div>
  </div>
  {{/if}}
          
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
      <div class="row">
      <div class="profile-form col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
        <form name="upload-profile" action="/pet-set-up" method="post" enctype="multipart/form-data">
          <div class="form-group col-xs-12 controls control-group text-center">
            <label class="upload-label">Pety Picture</label>
            <br>
            <img class="profile-img-display img-circle" id="preview" src="#" alt="" />
            <br>
            <input class="profile-upload" type="file" id="file" name="profileImage" onchange="displayImage(this);"/>
            <label class="btn btn-default" for="file">Choose a file...</label>
            <br>
          </div>
          <div class="form-group col-xs-12 floating-label-form-group controls control-group">
            <label>Name</label>
            <input type="text" class="form-control" placeholder="Name" name="name" require data-validation-required-message="Please fill the name.">
            <p class="help-block text-danger"></p>
            <br>
          </div>
          <div class="form-group col-xs-12 floating-label-form-group controls control-group">
            <label>Breed</label>
            <input type="text" class="form-control" placeholder="Breed" name="breed" require data-validation-required-message="Please fill the breed.">
            <p class="help-block text-danger"></p>
            <br>
          </div>
          <div class="form-group col-xs-12 floating-label-form-group controls control-group">
            <label>Date of Birth</label>
            <input type="date" id="bday" class="form-control" placeholder="DateOfBirth" name="birthday" require data-validation-required-message="Please enter the birthday">
            <p class="help-block text-danger"></p>
            <br>
          </div>
          <div class="form-group col-xs-12 floating-label-form-group controls control-group">
            <label>Bio</label>
            <textarea type="text" class="bio form-control" rows="5" placeholder="Bio" name="bio" require data-validation-required-message="Please fill in the pet bio."></textarea>
            <p class="help-block text-danger"></p>
          </div>
          <br>
          <div class="form-group col-xs-12 floating-label-form-group controls control-group">
            <label>Hobbies</label>
            <input type="text" class="form-control" placeholder="Hobbies" name="hobbies" require data-validation-required-message="List any pet hobbies.">
            <p class="help-block text-danger"></p>
            <br>
          </div>

          <div class="form-group col-xs-12 floating-label-form-group controls control-group">
            <hr class="divider">
            <button type="submit" class="btn btn-default">Done</button>
          </div>
        </form>


      <form name="upload-profile" action="/pet-set-up" method="post" enctype="multipart/form-data">
    </div>
  </div>
</div>
